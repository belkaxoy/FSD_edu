include ./components/color-type/color-type
include ./components/text-type/text-type

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title FSD_edu

  body
    .logo
      img(src="./src/assets/img/logo.svg", alt="logo")
    .container
      .row
        .color-types
          +color-type({color_name: 'Dark Shade 100%', color_hex: '#1F2041', class_name: 'dark-shade-100'})
          +color-type({color_name: 'Dark Shade 75%', color_hex: '#1F2041', class_name: 'dark-shade-75'})
          +color-type({color_name: 'Dark Shade 50%', color_hex: '#1F2041', class_name: 'dark-shade-50'})
          +color-type({color_name: 'Dark Shade 25%', color_hex: '#1F2041', class_name: 'dark-shade-25'})
          +color-type({color_name: 'Dark Shade 5%', color_hex: '#1F2041', class_name: 'dark-shade-5'})
          +color-type({color_name: 'Purple', color_hex: '#BC9CFF', class_name: 'purple'})
          +color-type({color_name: 'Green', color_hex: '#6FCF97', class_name: 'green'})
          
        .text-types
          +text-type({element_name: 'H1', element_explanation: 'This one is the sub-section or widget title'})
          +text-type({element_name: 'H2', element_explanation: 'Next one is the item title inside widgets'})
          +text-type({element_name: 'H3', element_explanation: 'This is a label or CTA text'})
          +text-type({element_name: 'Body', element_explanation: 'This is the body text which is used for most of the design, like paragraphs, lists, etc.'})